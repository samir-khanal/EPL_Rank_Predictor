{
    "version": 2,
    "builds": [
        {
            "src": "server.py",
            "use": "@vercel/python",
            "config": { "runtime": "python3.10" }
        }
    ],
    "routes": [
        { "src": "/(.*)", "dest": "server.py" }
    ],
    "env": {
        "PIP_NO_CACHE_DIR": "off",
        "PIP_DISABLE_PIP_VERSION_CHECK": "1",
        "CARGO_HOME": "/tmp/cargo",
        "RUSTUP_HOME": "/tmp/rustup"
    }
}

